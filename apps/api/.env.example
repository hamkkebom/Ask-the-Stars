# App
NODE_ENV=development
PORT=4000
APP_URL=http://localhost:4000

# Database (Supabase PostgreSQL - 서울 리전)
DATABASE_URL=postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Supabase (서울 리전)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJxxx...

# Redis (Upstash - 도쿄)
UPSTASH_REDIS_REST_URL=https://apn1-xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxxx
REDIS_URL=rediss://default:xxxxx@apn1-xxxxx.upstash.io:6379

# Cloudflare R2 (영상 스토리지)
CLOUDFLARE_ACCOUNT_ID=xxxxx
CLOUDFLARE_R2_ACCESS_KEY_ID=xxxxx
CLOUDFLARE_R2_SECRET_ACCESS_KEY=xxxxx
CLOUDFLARE_R2_BUCKET_NAME=ask-the-stars-videos
CLOUDFLARE_R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# Cloudflare Stream (영상 스트리밍)
CLOUDFLARE_STREAM_API_TOKEN=xxxxx
CLOUDFLARE_STREAM_CUSTOMER_CODE=xxxxx

# WebSocket
WS_CORS_ORIGIN=http://localhost:3000

# Monitoring - Sentry (무료)
SENTRY_DSN=https://xxxxx@o123456.ingest.sentry.io/123456

# Monitoring - BetterStack (무료)
BETTERSTACK_SOURCE_TOKEN=xxxxx

# Google Cloud Run (Production)
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-northeast3
