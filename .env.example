# =============================================
# Environment Configurations
# Copy this file to .env and .env.local
# =============================================

# --- App ---
NODE_ENV=development
PORT=3000
API_URL=http://localhost:4000
WEB_URL=http://localhost:3000

# --- Database (Supabase / PostgreSQL) ---
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/ask-the-stars?schema=public"

# --- Authentication (JWT) ---
JWT_SECRET="super-secret-jwt-key-replace-in-production"
JWT_EXPIRATION="1d"

# --- Cloudflare R2 (Object Storage) ---
CLOUDFLARE_ACCOUNT_ID="your-account-id"
CLOUDFLARE_ACCESS_KEY_ID="your-access-key-id"
CLOUDFLARE_SECRET_ACCESS_KEY="your-secret-access-key"
CLOUDFLARE_BUCKET_NAME="hankaebom-star-uploads"
# Optional: Public bucket URL or Custom Domain
CLOUDFLARE_PUBLIC_Url="https://static.your-domain.com"

# --- Cache (Redis / Upstash) ---
REDIS_URL="redis://localhost:6379"

# --- Email (Nodemailer) ---
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# --- Monitoring (Sentry) ---
SENTRY_DSN="https://michel-jackson@sentry.io/123456"

# --- Google Cloud (For Deployment) ---
GCP_PROJECT_ID="hankaebom-star-id"
